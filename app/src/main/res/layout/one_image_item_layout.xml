<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_news_tv_title"
                android:text="正真的粉丝就算。。。"
                android:textColor="@color/color_black"
                android:maxLines="4"
                android:textSize="14sp"
                android:ellipsize="end"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">
                <TextView
                    android:id="@+id/item_news_tv_source"
                    android:text="人民网"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/item_news_tv_comments"
                    android:text="评论数"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/item_news_tv_time"
                    android:text="5分钟前"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/item_news_tv_image"
            android:src="@drawable/backgroundimg"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
        </LinearLayout>

    </LinearLayout>

